<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.invoice.contratista.ui.fragment.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_eventFragment"
            app:destination="@id/eventFragment" />
        <action
            android:id="@+id/action_navigation_home_to_addEventFragment"
            app:destination="@id/createEventFragment" />
        <action
            android:id="@+id/action_navigation_home_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.invoice.contratista.ui.fragment.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_createCustomerFragment"
            app:destination="@id/createCustomerFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.invoice.contratista.ui.fragment.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.invoice.contratista.ui.fragment.event.create.CreateEventFragment"
        android:label="@string/new_event"
        tools:layout="@layout/fragment_create_event" >
        <action
            android:id="@+id/action_addEventFragment_to_eventFragment"
            app:destination="@id/eventFragment" />
    </fragment>

    <fragment
        android:id="@+id/createCustomerFragment"
        android:name="com.invoice.contratista.ui.fragment.customer.create.CreateCustomerFragment"
        android:label="create_customer_fragment"
        tools:layout="@layout/fragment_create_customer" />
    <fragment
        android:id="@+id/addPartFragment"
        android:name="com.invoice.contratista.ui.fragment.part.PartFragment"
        android:label="fragment_add_part"
        tools:layout="@layout/fragment_part" />
    <fragment
        android:id="@+id/eventFragment"
        android:name="com.invoice.contratista.ui.fragment.event.EventFragment"
        android:label="fragment_event"
        tools:layout="@layout/fragment_event" >
        <action
            android:id="@+id/action_eventFragment_to_addPartFragment"
            app:destination="@id/addPartFragment" />
        <action
            android:id="@+id/action_eventFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/action_eventFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
        <action
            android:id="@+id/action_eventFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@+id/navigation_home"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.invoice.contratista.ui.fragment.schedule.create_edit.CreateEditScheduleFragment"
        android:label="fragment_schedule"
        tools:layout="@layout/fragment_create_edit_schedule" />
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.invoice.contratista.ui.fragment.notes.create.CreateEditNoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_create_edit_note" />

</navigation>