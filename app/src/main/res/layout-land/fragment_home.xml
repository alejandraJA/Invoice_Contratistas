<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.home.HomeFragment">

    <TextView
        android:id="@+id/text_to_do"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:text="@string/schedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_schedule"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginEnd="8dp"
        android:paddingTop="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_add_event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_to_do"
        tools:itemCount="2"
        tools:listitem="@layout/item_schedule" />

    <TextView
        android:id="@+id/text_event"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event"
        app:layout_constraintStart_toStartOf="@+id/button_add_event"
        app:layout_constraintTop_toTopOf="@+id/text_to_do" />

    <Button
        android:id="@+id/button_add_event"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16sp"
        android:text="@string/add_event"
        app:icon="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_schedule"
        app:layout_constraintTop_toBottomOf="@+id/text_event" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_event"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:paddingTop="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_schedule"
        app:layout_constraintTop_toBottomOf="@+id/button_add_event"
        tools:listitem="@layout/item_event" />

</androidx.constraintlayout.widget.ConstraintLayout>