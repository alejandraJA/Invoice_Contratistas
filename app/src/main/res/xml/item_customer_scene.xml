<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/constraint_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/button_call"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button3" />
        <Constraint
            android:id="@+id/button_email"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button_message"
            app:layout_constraintStart_toEndOf="@+id/button_call"
            app:layout_constraintTop_toTopOf="@+id/button3" />
        <Constraint
            android:id="@+id/button_message"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button_edit"
            app:layout_constraintStart_toEndOf="@+id/button_email"
            app:layout_constraintTop_toTopOf="@+id/button3" />
        <Constraint
            android:id="@+id/button_edit"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button_message"
            app:layout_constraintTop_toTopOf="@+id/button3" />
        <Constraint
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/constraint_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/button_call"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button3"/>
        <Constraint
            android:id="@+id/button_email"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button_message"
            app:layout_constraintStart_toEndOf="@+id/button_call"
            app:layout_constraintTop_toTopOf="@+id/button3" />
        <Constraint
            android:id="@+id/button_message"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button_edit"
            app:layout_constraintStart_toEndOf="@+id/button_email"
            app:layout_constraintTop_toTopOf="@+id/button3" />
        <Constraint
            android:id="@+id/button_edit"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button_message"
            app:layout_constraintTop_toTopOf="@+id/button3" />
        <Constraint
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraint_content" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="250">
        <OnClick app:targetId="@+id/constraint_content" />
        <OnSwipe app:maxVelocity="3.91" />
    </Transition>
</MotionScene>
