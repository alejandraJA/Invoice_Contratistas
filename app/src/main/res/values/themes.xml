<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base appApplication theme. -->
    <style name="Theme.InvoiceContratistas" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/md_theme_light_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/md_theme_light_background</item>
        <item name="android:navigationBarColor">@color/md_theme_light_background</item>
        <item name="tint">@color/md_theme_light_secondary</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent
        </item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/customText</item>
        <item name="chipStyle">@style/Widget.Material3.Chip.Suggestion.Elevated</item>
        <item name="materialCardViewStyle">?attr/materialCardViewElevatedStyle</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="customText" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/md_theme_light_surface</item>
    </style>

    <style name="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="passwordToggleTint">@color/md_theme_light_primary</item>
        <item name="startIconTint">@color/md_theme_light_primary</item>
        <item name="hintTextColor">@color/md_theme_light_inversePrimary</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/md_theme_light_inversePrimary</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
    </style>

    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="customedit" parent="">
        <item name="android:background">@drawable/motion_day</item>
        <item name="android:backgroundTint">@color/md_theme_light_primary_variant</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="startIconTint">@color/md_theme_light_primary</item>
    </style>

    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24sp</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24sp</item>
    </style>

    <style name="Theme.InvoiceContratistas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Title.Day">
        <item name="android:background">@drawable/motion_day</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:padding">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_light_surface</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.Day">
        <item name="android:padding">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.Day.Selected">
        <item name="backgroundTint">@color/md_theme_light_secondary</item>
        <item name="android:background">@drawable/motion_day</item>
        <item name="android:textColor">@color/md_theme_light_surface</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Subtitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Subtitle.Style">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24sp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.style">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2.style">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>

    <style name="Theme.InvoiceContratistas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InvoiceContratistas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="startIconTint">@color/md_theme_light_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MyApp.SmallComponent</item>
        <item name="android:editTextStyle">@style/TextInputEditText</item>
        <item name="hintTextColor">@color/md_theme_light_primary</item>
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/backround_component</item>
        <item name="android:backgroundTint">@color/md_theme_light_surfaceVariant</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingEnd">16sp</item>
        <item name="android:paddingStart">16sp</item>
        <item name="android:paddingTop">16sp</item>
        <item name="android:paddingBottom">16sp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorError">@color/md_theme_light_error</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">48sp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:background">@drawable/ic_dot</item>
        <item name="android:backgroundTint">@color/list_colors_icon_background_light</item>
        <item name="backgroundTint">@color/list_colors_icon_background_light</item>
        <item name="android:padding">8sp</item>
        <item name="tint">@color/list_colors_icon</item>
    </style>

</resources>