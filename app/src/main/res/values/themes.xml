<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base appApplication theme. -->
    <style name="Theme.InvoiceContratistas" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_500</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">#E6EFF6</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="fontFamily">@font/font</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent
        </item>
        <item name="tint">@color/purple_500</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/customText</item>
        <item name="chipStyle">@style/Widget.Material3.Chip.Suggestion.Elevated</item>
        <item name="materialCardViewStyle">?attr/materialCardViewElevatedStyle</item>
    </style>

    <style name="customText" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="passwordToggleTint">@color/purple_200</item>
        <item name="startIconTint">@color/purple_200</item>
        <item name="hintTextColor">#8A451506</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">#E3B5A7</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/purple_500</item>
    </style>

    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/purple_700</item>
    </style>

    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24sp</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24sp</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24sp</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="startIconTint">@color/purple_200</item>
    </style>

    <style name="customedit" parent="">
        <item name="android:background">@drawable/motion_day</item>
        <item name="android:backgroundTint">#46E37E5E</item>
    </style>

    <style name="Theme.InvoiceContratistas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Title.Day">
        <item name="android:background">@drawable/motion_day</item>
        <item name="backgroundTint">@color/purple_200</item>
        <item name="android:padding">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.Day">
        <item name="android:padding">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.Day.Selected">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:background">@drawable/motion_day</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Subtitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Subtitle.Style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2.style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.InvoiceContratistas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InvoiceContratistas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="startIconTint">@color/purple_200</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MyApp.SmallComponent</item>
        <item name="android:editTextStyle">@style/TextInputEditText</item>
        <item name="hintTextColor">@color/purple_200</item>
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingEnd">16sp</item>
        <item name="android:paddingStart">16sp</item>
        <item name="android:paddingTop">16sp</item>
        <item name="android:paddingBottom">16sp</item>
        <item name="android:background">@drawable/motion_day</item>
        <item name="android:backgroundTint">#46E8D7D2</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/error</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">48sp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:background">@drawable/ic_dot</item>
        <item name="android:backgroundTint">@color/list_colors_icon_background_light</item>
        <item name="backgroundTint">@color/list_colors_icon_background_light</item>
        <item name="android:padding">8sp</item>
        <item name="tint">@color/list_colors_icon</item>
    </style>

</resources>