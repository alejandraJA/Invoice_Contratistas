<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.event.EventActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.InvoiceContratistas.AppBarOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16sp">

            <TextView
                android:id="@+id/textView5"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/priority"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView3"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/priority"
                app:layout_constraintStart_toEndOf="@+id/priority"
                app:layout_constraintTop_toTopOf="@+id/priority"
                tools:text="@string/low" />

            <ImageView
                android:id="@+id/image_priority"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_marginStart="4sp"
                android:contentDescription="@string/priority"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="@+id/priority"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/priority" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    android:layout_margin="8sp"
                    android:clickable="true"
                    android:contentDescription="@string/delete"
                    android:focusable="true"
                    android:padding="4sp"
                    android:src="@drawable/ic_trash"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    android:layout_margin="8sp"
                    android:clickable="true"
                    android:contentDescription="@string/save"
                    android:focusable="true"
                    android:padding="4sp"
                    android:src="@drawable/ic_floppy_disk" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    android:layout_margin="8sp"
                    android:clickable="true"
                    android:contentDescription="@string/save"
                    android:focusable="true"
                    android:padding="4sp"
                    android:src="@drawable/ic_check" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/add"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_add" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>