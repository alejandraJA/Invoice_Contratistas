<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8sp"
    tools:context=".ui.fragment.part.adapter.TaxViewHolder">

    <TextView
        android:id="@+id/text_type_tax"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_type"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/local_tax" />

    <TextView
        android:id="@+id/text_type"
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8sp"
        app:layout_constraintEnd_toStartOf="@+id/text_tax"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_type_tax"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="IVA (16 %)" />

    <TextView
        android:id="@+id/text_tax"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:drawablePadding="8sp"
        android:textAlignment="textEnd"
        app:drawableStartCompat="@drawable/ic_money"
        app:drawableTint="@color/money"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_type"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="50.45" />

</androidx.constraintlayout.widget.ConstraintLayout>