<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="part"
            type="com.invoice.contratista.data.local.relations.Part" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16sp"
        android:paddingTop="8sp"
        android:paddingEnd="16sp">

        <TextView
            android:id="@+id/text_product"
            style="@style/TextAppearance.Material3.TitleSmall"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8sp"
            android:layout_marginBottom="8sp"
            android:maxLines="2"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/text_quantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:maxLines="2"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/text_quantity"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_separator"
            app:layout_constraintEnd_toStartOf="@+id/text_separator"
            app:layout_constraintTop_toTopOf="@+id/text_price"
            tools:text="2" />

        <TextView
            android:id="@+id/text_separator"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8sp"
            android:text="@string/multiplication"
            android:textColor="@color/text_secondary"
            app:layout_constraintBottom_toBottomOf="@+id/text_price"
            app:layout_constraintEnd_toStartOf="@+id/text_price"
            app:layout_constraintTop_toTopOf="@+id/text_price" />

        <TextView
            android:id="@+id/text_separator4"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/same"
            android:textColor="@color/text_secondary"
            app:layout_constraintBottom_toBottomOf="@+id/text_total"
            app:layout_constraintEnd_toEndOf="@+id/text_separator"
            app:layout_constraintStart_toStartOf="@+id/text_separator"
            app:layout_constraintTop_toTopOf="@+id/text_total" />

        <TextView
            android:id="@+id/text_separator3"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_total"
            android:textColor="@color/text_secondary"
            app:layout_constraintBottom_toTopOf="@+id/text_price"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_separator2"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textColor="@color/text_secondary"
            app:layout_constraintBottom_toTopOf="@+id/text_total"
            app:layout_constraintEnd_toEndOf="@+id/text_total" />

        <TextView
            android:id="@+id/text_total"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:drawablePadding="8sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_money"
            app:drawableTint="#4CAF50"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2,000.00" />

        <TextView
            android:id="@+id/text_price"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:drawablePadding="8sp"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_money"
            app:drawableTint="#4CAF50"
            app:layout_constraintBottom_toTopOf="@+id/text_separator2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_total"
            tools:text="1,000.00" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>