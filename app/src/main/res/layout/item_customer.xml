<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16sp"
    android:layout_marginTop="8sp"
    android:layout_marginEnd="16sp">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16sp"
        app:layoutDescription="@xml/item_customer_scene">

        <LinearLayout
            android:id="@+id/constraint_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="Dunder Mifflin S.A. de C.V." />

            <TextView
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="ABC101010111" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_call"
            style="@style/ImageButton"
            android:layout_marginTop="8sp"
            android:contentDescription="@string/phone"
            android:src="@drawable/ic_phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraint_content" />

        <ImageButton
            android:id="@+id/button_email"
            style="@style/ImageButton"
            android:contentDescription="@string/phone"
            android:src="@drawable/ic_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_message"
            app:layout_constraintStart_toEndOf="@+id/button_call"
            app:layout_constraintTop_toTopOf="@+id/button_call" />

        <ImageButton
            android:id="@+id/button_message"
            style="@style/ImageButton"
            android:contentDescription="@string/phone"
            android:src="@drawable/ic_round_message_24"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button_edit"
            app:layout_constraintStart_toEndOf="@+id/button_email"
            app:layout_constraintTop_toTopOf="@+id/button_call" />

        <ImageButton
            android:id="@+id/button_edit"
            style="@style/ImageButton"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/phone"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button_message"
            app:layout_constraintTop_toTopOf="@+id/button_call" />

        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="@string/add_event"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_edit" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</com.google.android.material.card.MaterialCardView>